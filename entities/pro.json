{
    "format_version": "1.16.0",
    "minecraft:pro": {
      "description": {
        "identifier": "minecraft:pro",
        "runtime_identifier": "minecraft:pig",
        "is_spawnable": true,
        "is_summonable": true,
        "is_experimental": false
      },
      "component_groups": {},
      "components": {
        "minecraft:type_family": {
          "family": [ "minecraft", "pro"]
        },
        "minecraft:health": {
          "value": 20,
          "max": 20
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 1,
          "entity_types": [
            {
              "filters": { "other_with_families": "player" },
              "max_dist": 16
            }
          ], 
          "must_see": true
        },
        "minecraft:target_nearby_sensor": {
          "inside_range": 3.0,
          "outside_range": 7.0,
          "on_inside_range": {
            "event": "minecraft:start_exploding",
            "target": "self"
          },
          "on_outside_range": {
            "event": "minecraft:stop_exploding",
            "target": "self"
          }
        }
      }
    }
  }